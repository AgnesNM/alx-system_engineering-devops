#!/bin/bash

# SSH connection script using private key
# Usage: ./connect.sh <server_hostname_or_ip>

if [ $# -eq 0 ]; then
    echo "Usage: $0 <server_hostname_or_ip>"
    echo "Example: $0 192.168.1.100"
    echo "Example: $0 myserver.example.com"
    exit 1
fi

SERVER="$1"

# Connect to server using SSH with private key
ssh -i ~/.ssh/school ubuntu@"$SERVER"
